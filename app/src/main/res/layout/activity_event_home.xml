<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eventHome">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/buttonColour"> <!-- Setting the layout background to blue -->

        <!-- Setting text color to white -->

        <!-- Setting text color to white -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="233dp"
            android:text="Home"
            android:textSize="36sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="186dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/search_view_background"
            app:iconifiedByDefault="false"
            app:queryHint="Search here...."
            android:focusable="false"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_panel"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/rounded_square_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Home"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/Favourite"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="117dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="193dp"
            android:layout_weight="1"
            android:src="@drawable/favourite" />

        <ImageView
            android:id="@+id/Notification"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="110dp"
            android:layout_weight="1"
            android:src="@drawable/notification" />

        <ImageView
            android:id="@+id/Setting"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="25dp"
            android:layout_weight="1"
            android:src="@drawable/setting" />
    </RelativeLayout>


    <ListView
        android:id="@+id/eventlist"
        android:layout_width="match_parent"
        android:layout_height="621dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-78dp"
        android:layout_marginBottom="70dp"
        android:background="@color/backGround"
        android:visibility="gone">


    </ListView>

    <TextView
        android:id="@+id/NoEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There are currently no events nearby!"
        android:layout_centerInParent="true" /> <!-- This attribute centers the TextView -->


</RelativeLayout>
